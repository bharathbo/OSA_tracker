@{
    ViewData["Title"] = "Expense";
}
@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expense</h1>
    <br />
    <hr />
    <h3>Total Expense Rs @ViewBag.Expense</h3>
    <br />
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Id</td>
                        <td>@expense.Value</td>
                        <td>@expense.Description</td>
                        <td>
                        <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                        <a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No expenses available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
